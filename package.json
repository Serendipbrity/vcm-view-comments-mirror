{
  "name": "vcm-view-comments-mirror",
  "displayName": "VCM - View Comments Mirror",
  "version": "0.1.4",
  "publisher": "serendipbrity",
  "description": "Invisible documentation layer for code â€” keep repos clean, comments versioned.",
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./vcm.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "vcm-view-comments-mirror.markFrozen",
          "when": "vcm.cursorOnComment && !vcm.commentIsFrozen",
          "group": "navigation@1"
        },
        {
          "command": "vcm-view-comments-mirror.unmarkFrozen",
          "when": "vcm.cursorOnComment && vcm.commentIsFrozen",
          "group": "navigation@1"
        },
        {
          "command": "vcm-view-comments-mirror.markAlwaysShow",
          "when": "vcm.cursorOnComment && !vcm.commentIsAlwaysShow && !vcm.commentIsPrivate",
          "group": "navigation@2"
        },
        {
          "command": "vcm-view-comments-mirror.unmarkAlwaysShow",
          "when": "vcm.cursorOnComment && vcm.commentIsAlwaysShow",
          "group": "navigation@2"
        },
        {
          "command": "vcm-view-comments-mirror.markPrivate",
          "when": "vcm.cursorOnComment && !vcm.commentIsPrivate && !vcm.commentIsAlwaysShow",
          "group": "navigation@3"
        },
        {
          "command": "vcm-view-comments-mirror.unmarkPrivate",
          "when": "vcm.cursorOnComment && vcm.commentIsPrivate",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "VCM Settings",
      "properties": {
        "vcm-view-comments-mirror.moveCommentWithAnchor": {
          "type": "boolean",
          "default": false,
          "description": "Move or delete comments with code edits when in clean mode."
        }
      }
    },
    "commands": [
      {
        "command": "vcm-view-comments-mirror.clearState",
        "title": "VCM: Clear State"
      },
      {
        "command": "vcm-view-comments-mirror.markFrozen",
        "title": "VCM: Freeze Comment"
      },
      {
        "command": "vcm-view-comments-mirror.unmarkFrozen",
        "title": "VCM: Unfreeze Comment"
      },
      {
        "command": "vcm-view-comments-mirror.toggleCurrentFileComments",
        "title": "VCM: --- Current File: --- View/Hide Comments"
      },
      {
        "command": "vcm-view-comments-mirror.toggleSplitViewComments",
        "title": "VCM: --- Split View: --- View/Hide Comments"
      },
      {
        "command": "vcm-view-comments-mirror.toggleLocalComments",
        "title": "VCM: Hide/Show Local Comments (Repo-Wide)"
      },
      {
        "command": "vcm-view-comments-mirror.markAlwaysShow",
        "title": "VCM: Always Show This Comment"
      },
      {
        "command": "vcm-view-comments-mirror.unmarkAlwaysShow",
        "title": "VCM: Remove 'Always Show' This Comment"
      },
      {
        "command": "vcm-view-comments-mirror.markPrivate",
        "title": "VCM: Mark as Private"
      },
      {
        "command": "vcm-view-comments-mirror.unmarkPrivate",
        "title": "VCM: Unmark Private"
      },
      {
        "command": "vcm-view-comments-mirror.togglePrivateComments",
        "title": "VCM: Toggle Private Comments"
      }
    ],
    "keybindings": [
      {
        "command": "vcm-view-comments-mirror.toggleSplitViewComments",
        "key": "ctrl+alt+v+c",
        "mac": "cmd+alt+v+c",
        "when": "editorTextFocus"
      },
      {
        "command": "vcm-view-comments-mirror.toggleCurrentFileComments",
        "key": "ctrl+v+c",
        "mac": "cmd+v+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "comments",
    "documentation",
    "code-review",
    "clean-code"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Serendipbrity/vcm-view-comments-mirror"
  },
  "scripts": {
    "build:vsix": "vsce package && code --install-extension *.vsix --force"
  },
  "license": "MIT",
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
